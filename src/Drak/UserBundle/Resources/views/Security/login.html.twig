{% extends "DrakCoreBundle::layout.html.twig" %}

{% block body %}
<div class="container">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
      {# S'il y a une erreur, on l'affiche dans un joli cadre #}
      {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
      {% endif %}


      {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
      
        <form action="{{ path('login_check') }}" method="post" class="form-signin well">
          <h2 class="form-signin-heading">Connectez-vous</h2>
          <label for="username">Login :</label>
          <input class="form-control" placeholder="identifiant" required="" autofocus="" type="text" id="username" name="_username" value="{{ last_username }}" />

          <label for="password">Mot de passe :</label>
          <input class="form-control" placeholder="Password" required="" type="password" id="password" name="_password" />
          <br />
          <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
        </form>
      </div>
    </div>
  <div class="col-sm-3"></div>
  

{% endblock %}

